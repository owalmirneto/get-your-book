<div class="row">
  <div class="span3">
    <%= render "shared/sidebar" %>
  </div>
  <div class="span9">
    <div id="books">
      <p><%= render "search" %></p>
      <% if @books.present? %>
        <div class="row">
          <% @books.each do |book| %>
            <div class="span3">
              <figure>
                <figcaption>
                  <h3><%= book.title %></h3>
                  <p class="author"><%= book.author.name %></p>
                </figcaption>
                <%= image_tag book.image %>
              </figure>
              <div class="actions">
                <%= available_link_to book %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="alert"><b>Atention!</b> <br /> Sorry, no book was found. <%= link_to "See all", root_path %>.</p>
      <% end %>
    </div>
  </div>
</div>