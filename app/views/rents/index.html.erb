<div class="row">
  <div class="span3">
    <%= render "shared/sidebar" %>
  </div>
  <div class="span9">
    <p><%= render "books/search" %></p>
    <% if @rents.present? %>
      <div id="rents">
        <table class="table table-bordered table-hover"><thead>
          <tr>
            <th>Book</th>
            <th>Rented by</th>
            <th>Status</th>
            <th>Created at</th>
            <th>Expected at</th>
            <th>Delivered at</th>
            <th>&nbsp;</th>
          </tr>
        </thead><tbody>
          <% @rents.each do |rent| %>
            <tr>
              <td><%= rent.book.title %></td>
              <td><%= rent.student.name %></td>
              <td><%= statuses rent %></td>
              <td class="center"><%= time_ago_in_words rent.created_at %></td>
              <td class="center"><%= rent.delivery_expected_at.strftime("%B %d") %></td>
              <td class="center"><%= rent.delivered_at.present? ? rent.delivered_at.strftime("%B %d") : "not yet" %></td>
              <td class="center">
                <%= link_to '', rent.book, :class => 'icon-eye-open' %>
              </td>
            </tr>
          <% end %>
        </tbody></table>
      </div>
    <% else %>
      <p class="alert"><b>Atention!</b> record not found.</p>
    <% end %>
  </div>
</div>
