<div id="login">
  <h2>Authentication</h2>

  <%= form_for(resource, :as => resource_name, :class => "input-append", :url => session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true, :placeholder => "E-mail" %>

    <%= f.password_field :password, :placeholder => "Password" %>

    <p><%= f.submit "Sign in", :class => "btn btn-primary btn-large" %></p>
  <% end %>

</div>